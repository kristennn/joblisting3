<div class="col-md-12">
  <%= link_to("New Job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Created_at</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, admin_job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.created_at %></td>
          <td>
            <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default") %>
            <%= link_to("Delete", admin_job_path(job), class: "btn btn-sm btn-default", method: :delete, data: {confirm: "Are you sure?"}) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
