<div class="col-md-12">
  <div class="dropdown pull-right">
  <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    Order
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to("by_wage_lower_bound", jobs_path(:order => "by_lower_bound")) %></li>
    <li><%= link_to("by_wage_upper_bound", jobs_path(:order => "by_upper_bound")) %></li>
    <li><%= link_to("by_created_at", jobs_path) %></li>
  </ul>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Wage_lower_bound</td>
        <td>Wage_upper_bound</td>
        <td>Created_at</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
